         </VBox.margin>
      </Label>
      <HBox alignment="CENTER" prefHeight="314.0" prefWidth="563.0">
         <children>
            <VBox alignment="CENTER" prefHeight="203.0" prefWidth="292.0">
               <children>
                  <Label fx:id="nick" prefHeight="38.0" prefWidth="334.0">
                     <VBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="name" prefHeight="38.0" prefWidth="334.0">
                     <VBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </VBox.margin>
                  </Label>
