<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipi.gamegram.UserPageController">
   <children>
      <Label fx:id="title" alignment="CENTER" prefHeight="102.0" prefWidth="535.0" textAlignment="CENTER" wrapText="true">
