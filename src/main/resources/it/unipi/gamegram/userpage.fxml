                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </HBox.margin>
            </VBox>
            <VBox alignment="CENTER">
               <children>
                  <Button fx:id="follow" mnemonicParsing="false" onAction="#follow" prefHeight="40.0" prefWidth="194.0" text="Follow">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="unfollow" mnemonicParsing="false" onAction="#unfollow" prefHeight="40.0" prefWidth="194.0" text="Unfollow">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="showLiked" mnemonicParsing="false" onAction="#showLiked" prefHeight="40.0" prefWidth="194.0" text="Show liked games">
