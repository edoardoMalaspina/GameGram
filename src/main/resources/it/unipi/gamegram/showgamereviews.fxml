<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipi.gamegram.ShowGameReviewsController">
   <children>
      <Label fx:id="title" alignment="CENTER" contentDisplay="CENTER" prefHeight="108.0" prefWidth="580.0" textAlignment="CENTER">
         <font>
            <Font size="36.0" />
         </font>
         <VBox.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </VBox.margin>
      </Label>
      <TableView fx:id="reviewTable" prefHeight="200.0" prefWidth="200.0">
         <contextMenu>
            <ContextMenu fx:id="cm">
              <items>
                <MenuItem fx:id="menuItem1" mnemonicParsing="false" onAction="#showReview" text="show review" />
              </items>
            </ContextMenu>
         </contextMenu>
         <VBox.margin>
            <Insets bottom="15.0" left="100.0" right="100.0" top="15.0" />
         </VBox.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button fx:id="back" mnemonicParsing="false" onAction="#back" prefHeight="26.0" prefWidth="111.0" text="Back">
         <VBox.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </VBox.margin>
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </children>
</VBox>
